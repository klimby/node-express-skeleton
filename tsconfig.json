{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
    
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es6",
        // "sourceMap": true,
        
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "files": [
        "./node_modules/@types/node/index.d.ts",
        "./node_modules/@types/express/index.d.ts",
        "./node_modules/@types/dotenv/index.d.ts",
        "./node_modules/@types/body-parser/index.d.ts",
        "./node_modules/@types/config/index.d.ts",
        "./node_modules/@types/jest/index.d.ts",
        "./node_modules/@types/lodash-es/index.d.ts",
        "./node_modules/@types/multer/index.d.ts",
        "./node_modules/@types/supertest/index.d.ts",
        "./node_modules/@types/winston/index.d.ts"
    ],
    "exclude": [
        "typings/*",
        "node_modules"
    ]
}
